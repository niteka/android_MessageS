<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andoid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLogin"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/login_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"

        android:background="@drawable/rounded_editext_register_login"
        android:contentDescription="login"

        android:ems="10"
        android:hint="UserName"
        android:inputType="textPersonName"
        android:paddingLeft="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <EditText
        android:id="@+id/password_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_editext_register_login"
        android:ems="10"

        android:hint="PassWord"
        android:inputType="textPassword"
        android:paddingLeft="16dp"

        />

    <Button
        android:id="@+id/valid_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_valid"
        android:text="Valider"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:padding="20dp"
        android:paddingLeft="16dp"
        android:paddingBottom="@android:dimen/app_icon_size"
        android:text="Or Register Here"
        android:textColor="@android:color/white"
        android:gravity="bottom"

        android:textStyle="bold"
        />

</LinearLayout>
